// tsconfig.tool.json
{
  "compilerOptions": {
    "target": "es2015", // Or "es6", etc.
    "module": "esnext", // Or "commonjs", etc.
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "public/unlayer-custom",
    "declaration": false,
    "noEmitOnError": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "moduleDetection": "auto" // Add this line
  },
  "include": ["public/unlayer-custom/", "/types/unlayer.d.ts"],
  "exclude": ["node_modules"]
}
